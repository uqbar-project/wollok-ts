{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/temp",
    "sourceMap": true,
    "types": [
      "vitest",
      "./test/assertions",
      "node"
    ],
    "lib": [
      "es2021", "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "./language/*": ["language/*"]
    },
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.d.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.json",
    "scripts/**/*.json",
    "package.json"
  ],
  "exclude": [
    "**/*.js",
    "build",
    "node_modules"
  ]
}
