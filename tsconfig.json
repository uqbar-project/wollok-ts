{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist/temp",
    "sourceMap": true,
    "lib": [
      "es2021"
    ],
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.json",
    "scripts/**/*.json",
    "package.json"
  ],
  "exclude": [
    "**/*.js",
    "build",
    "node_modules"
  ]
}
