{
  "name": "wollok-ts",
  "version": "4.2.4",
  "wollokVersion": "3.4.0",
  "description": "TypeScript based Wollok language implementation",
  "repository": "https://github.com/uqbar-project/wollok-ts",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && cp -r dist/temp/src/* dist && rm -r dist/temp && cp -r language/src/* dist/wre/",
    "buildWRE": "tsx scripts/buildWRE.ts",
    "prepare": "tsx scripts/fetchLanguage.ts && npm run buildWRE && npm run copy:translations",
    "copy:translations": "cp ./language/src/resources/validationMessages/*.json ./src/validator",
    "diagnostic": "tsc --noEmit --diagnostics --extendedDiagnostics",
    "test": "npm run test:lint && npm run test:unit && npm run test:sanity && npm run test:examples",
    "test:lint": "eslint .",
    "test:coverage": "nyc --reporter=lcov npm run test",
    "test:unit": "mocha --parallel -r tsx/cjs test/**/*.test.ts",
    "test:examples": "npm run test:wtest -- --root language/test/examples",
    "test:game": "mocha --parallel -r tsx/cjs test/**/game.test.ts",
    "test:dynamicDiagram": "mocha --parallel -r tsx/cjs test/dynamicDiagram.test.ts",
    "test:helpers": "mocha --parallel -r tsx/cjs test/helpers.test.ts",
    "test:interpreter": "mocha --parallel -r tsx/cjs test/interpreter.test.ts",
    "test:linker": "mocha --parallel -r tsx/cjs test/linker.test.ts",
    "test:messageReporter": "mocha --parallel -r tsx/cjs test/messageReporter.test.ts",
    "test:model": "mocha --parallel -r tsx/cjs test/model.test.ts",
    "test:sanity": "npm run test:wtest -- --root language/test/sanity",
    "test:validations": "mocha --parallel -r tsx/cjs test/validator.test.ts",
    "test:typeSystem": "mocha --parallel -r tsx/cjs test/typeSystem*.test.ts",
    "test:wtest": "mocha --delay -t 10000 -r tsx/cjs test/wtest.ts",
    "test:file": "mocha -r tsx/cjs",
    "test:printer": "mocha --parallel -r tsx/cjs test/printer.test.ts",
    "test:parser": "mocha -r tsx/cjs test/parser.test.ts",
    "test:benchmarks": "mocha -t 999999 -r tsx/cjs test/benchmarks.ts",
    "lint:fix": "eslint . --fix",
    "validate:wollokVersion": "tsx scripts/validateWollokVersion.ts",
    "prepublishOnly": "npm run validate:wollokVersion && npm run build && npm test",
    "postpublish": "git tag v$npm_package_version && git push --tags",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/parsimmon": "^1.10.8",
    "parsimmon": "^1.18.1",
    "prettier-printer": "^1.1.4",
    "unraw": "^3.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/node": "^18.14.1",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.11",
    "@types/uuid": "^9.0.6",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "chai": "^4.3.7",
    "dedent": "^1.7.0",
    "eslint": "^9.39.1",
    "fast-glob": "^3.3.3",
    "jiti": "^2.6.1",
    "mocha": "^10.2.0",
    "nyc": "^17.1.0",
    "simple-git": "^3.20.0",
    "sinon": "17.0.0",
    "sinon-chai": "^3.7.0",
    "tsx": "^4.20.6",
    "typescript": "5.4.5",
    "typescript-eslint": "8.46.4",
    "yargs": "^17.7.2"
  }
}
