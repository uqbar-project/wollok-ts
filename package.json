{
  "name": "wollok-ts",
  "version": "1.8.1",
  "description": "TypeScript based Wollok language implementation",
  "repository": "https://github.com/uqbar-project/wollok-ts",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "buildWRE": "ts-node scripts/buildWRE.ts",
    "prepare": "ts-node scripts/fetchLanguage.ts && npm run buildWRE",
    "test": "npm run buildWRE && npm run test:lint && npm run test:unit && npm run test:sanity && npm run test:examples",
    "test:lint": "tslint --project .",
    "test:unit": "mocha -r ts-node/register test/**/*.test.ts",
    "test:examples": "node -r ts-node/register ./test/examples.ts",
    "test:sanity": "node -r ts-node/register ./test/sanity.ts",
    "test:performance": "rm -rf perf/bin && tsc perf/benchmark.ts --outDir perf/bin --target es2017 --module none && node perf/bin/benchmark.js",
    "prepublishOnly": "rm -rf dist && tsc && cp -r dist/temp/src/* dist && rm -r dist/temp && npm test",
    "postpublish": "git tag v$npm_package_version && git push --tags"
  },
  "dependencies": {
    "@types/parsimmon": "^1.10.0",
    "parsimmon": "^1.13.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/command-line-args": "^5.0.0",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.2",
    "command-line-args": "^5.1.1",
    "globby": "^10.0.1",
    "mocha": "^6.2.2",
    "simple-git": "^1.128.0",
    "sinon": "^7.5.0",
    "ts-mock-imports": "^1.2.6",
    "ts-node": "8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  }
}
