{
  "name": "wollok-ts",
  "version": "4.2.4",
  "wollokVersion": "3.4.0",
  "description": "TypeScript based Wollok language implementation",
  "repository": "https://github.com/uqbar-project/wollok-ts",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && cp -r dist/temp/src/* dist && rm -r dist/temp && cp -r language/src/* dist/wre/",
    "buildWRE": "tsx scripts/buildWRE.ts",
    "prepare": "tsx scripts/fetchLanguage.ts && npm run buildWRE && npm run copy:translations",
    "copy:translations": "cp ./language/src/resources/validationMessages/*.json ./src/validator",
    "diagnostic": "tsc --noEmit --diagnostics --extendedDiagnostics",
    "test": "npm run test:lint && npm run test:unit && npm run test:sanity && npm run test:examples",
    "test:lint": "eslint .",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:examples": "tsx test/wtest.ts --root language/test/examples",
    "test:game": "vitest run test/**/game.test.ts",
    "test:dynamicDiagram": "vitest run test/dynamicDiagram.test.ts",
    "test:helpers": "vitest run test/helpers.test.ts",
    "test:interpreter": "vitest run test/interpreter.test.ts",
    "test:linker": "vitest run test/linker.test.ts",
    "test:messageReporter": "vitest run test/messageReporter.test.ts",
    "test:model": "vitest run test/model.test.ts",
    "test:sanity": "tsx test/wtest.ts --root language/test/sanity",
    "test:validations": "vitest run test/validator.test.ts",
    "test:typeSystem": "vitest run test/typeSystem*.test.ts",
    "test:wtest": "tsx test/wtest.ts --timeout 10000",
    "test:file": "vitest run",
    "test:printer": "vitest run test/printer.test.ts",
    "test:parser": "vitest run test/parser.test.ts",
    "test:benchmarks": "vitest run test/benchmarks.ts --timeout 999999",
    "lint:fix": "eslint . --fix",
    "validate:wollokVersion": "tsx scripts/validateWollokVersion.ts",
    "prepublishOnly": "npm run validate:wollokVersion && npm run build && npm test",
    "postpublish": "git tag v$npm_package_version && git push --tags",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "5.5.0",
    "@types/parsimmon": "1.10.8",
    "parsimmon": "1.18.1",
    "prettier-printer": "1.1.4",
    "unraw": "3.0.0"
  },
  "devDependencies": {
    "@types/node": "22.18.0",
    "@types/uuid": "9.0.6",
    "@types/yargs": "17.0.22",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "dedent": "1.7.0",
    "eslint": "9.39.1",
    "eslint-plugin-vitest": "0.5.4",
    "fast-glob": "3.3.3",
    "jiti": "2.6.1",
    "simple-git": "3.30.0",
    "tsx": "4.21.0",
    "typescript": "5.4.5",
    "typescript-eslint": "8.48.1",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "3.2.4",
    "yargs": "17.7.2"
  }
}
